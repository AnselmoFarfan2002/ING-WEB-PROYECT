<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!-- CSS only -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
	<link rel="stylesheet" type="text/css" href="css/mis-conversaciones.css">

	<title>Mis conversaciones</title>
</head>
<body>
	<%- include('base.ejs') %>	
	<div class="container-chat">
		<div class="leftSide">
			<div class="btn-functions">
				<div class="d-grid gap-2 d-md-block">
					<button class="btn btn-primary" type="button">Ventas</button>
					<button class="btn btn-primary" type="button">Compras</button>
				</div>
			</div>

			<div class="chatlist">
				<!-- aquí se genera el listado de chats -->
			</div>
		</div>

		<div class="rigthSide">
			<div class="tab-content" id="chatsBoxes">
				<!-- aquí se generan los contenidos de los chats -->
			</div>

			<div class="chat-input">
				<div class="input-group mb-3">
					<input type="text" class="form-control" placeholder="Escriba un mensaje" aria-label="Recipient's username" aria-describedby="botonEnviar" id="contenidoMensaje">
					<button class="btn btn-primary" type="button" id="botonEnviar">Enviar</button>
				</div>
			</div>			
		</div>

		<div id="rightSide" class="text-center">
			<div class="user-img">
				<img src="images/fondo.jpg" class="img-fluid">
			</div>

			<div class="card border border-0">
				<div class="card-body">
					Nombre del usuario
				</div>
				<div class="card-body">
					Correo del usuario
				</div>
				<div class="card-body">
					Nombre de la empresa
				</div>
				<div class="card-body">
					900120120
				</div>
			</div>
		</div>
	</div>
</body>

<script type="text/javascript" src="/socket.io/socket.io.js"></script>
<script type="text/javascript" src="/js/chat/funcionesInterfaz.js"></script>
<script type="text/javascript" src="/js/chat/mensajes.js"></script>
<script type="text/javascript" src="/js/chat/cargaHistorialChats.js"></script>
</html>

