<!-- Modal -->
<div class="modal fade" id="login" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="loginModalLabel">Identificarse</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="form-floating mb-3">
          <input type="email" class="form-control" id="email" placeholder="name@example.com">
          <label for="email">Correo electrónico</label>
        </div>
        <div class="form-floating mb-3">
          <input type="password" class="form-control" id="pass" placeholder="Password">
          <label for="pass">Contraseña</label>
        </div>

        <div class="form-text text-align-end"><a type="button" class="text-decoration-none" data-bs-toggle="modal" data-bs-target="#recovey">¿Olvidaste tu contraseña?</a></div>
        
        <div class="form-text text-danger" id="respuesta"></div>
      </div>
      <div class="modal-footer">
        <div class="form-text me-auto">¿No tienes una cuenta? <a href="/registrarse" class="text-decoration-none">¡Regístrate!</a></div>
        <button type="button" class="btn btn-primary" id="logInBtn">Iniciar sesión</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
      </div>
    </div>
  </div>
</div>